<Window x:Class="WaeberEnterprises.VpnBypasser.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
		Title="MainWindow" Height="500" Width="800" 
		MaxWidth="1000" MaxHeight="600"
		
		DataContext="{Binding RelativeSource={ RelativeSource Self }}">
	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="About">
				<MenuItem Header="Info"/>
			</MenuItem>
		</Menu>
		<TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,20,10,10">
			<TabItem Header="TabItem" Name="Content">
				<Grid Background="#FFE5E5E5">
					<ListBox HorizontalAlignment="Left" Height="373" Margin="10,10,0,0" VerticalAlignment="Top" Width="365"/>
					<ListView HorizontalAlignment="Left" Height="373" Margin="448,10,0,0" VerticalAlignment="Top" Width="308">

					</ListView>
					<Image HorizontalAlignment="Stretch" Height="55" Margin="65,0,0,0" VerticalAlignment="Stretch" Width="49" Source="Images/Arrow_Right.png"/>
				</Grid>
			</TabItem>
			<TabItem Header="TabItem">
				<Grid Background="#FFE5E5E5"/>
			</TabItem>
		</TabControl>
	</DockPanel>
</Window>
